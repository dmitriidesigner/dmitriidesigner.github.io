              <div class="flex items-center justify-center sm:mr-auto mt-10 sm:mt-0">
                <img src="/pktlogo.svg" alt="PKT" class="h-8 w-auto opacity-80" />
              </div>
              <div class="flex flex-wrap items-center justify-center gap-4 text-sm text-[#b8c1de] sm:ml-auto">
                {[
                  { label: 'Media network', href: '#top' },
                  { label: 'Overview', href: '#overview' },
                    { label: 'Next gen', href: '#next-gen' },
                    { label: 'Three pillars', href: '#pillars' }
                  ].map(link => (
                    <a
                      href={link.href}
                      class="rounded-full px-3 py-2 transition hover:bg-white/10 hover:text-white"
                    >
                      {link.label}
                    </a>
                  ))}
                </div>
            </div>
          </div>
        </section>
      </main>
    </div>
    <div
      id="contact-modal"
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black/70 backdrop-blur-lg px-4"
    >
      <div class="relative w-full max-w-lg rounded-[44px] border border-white/10 bg-[#050815]/95 p-6 sm:p-8 shadow-[0_40px_120px_rgba(0,0,0,0.6)]">
        <button
          type="button"
          data-modal-close
          class="contact-content absolute right-4 top-4 inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/5 text-white/70 transition hover:bg-white/10 hover:text-white cursor-pointer"
          aria-label="Close"
        >
          ✕
        </button>
        <div class="flex flex-col gap-4 text-left" id="contact-body">
          <h3 class="text-xl font-semibold text-white contact-content">Get in touch</h3>
          <p class="text-sm text-white/70 contact-content">Share your details and we’ll reach out.</p>
          <form class="flex flex-col gap-4 contact-content" id="contact-form">
            <label class="flex flex-col gap-2 text-sm text-white/80" data-field="name">
              Name
              <input
                type="text"
                class="rounded-[14px] border border-white/10 bg-white/5 px-3 py-3 text-white placeholder:text-white/40 focus:border-white/30 focus:outline-none"
                placeholder="Your name"
              />
              <span class="text-xs text-red-300 hidden">Please enter your name.</span>
            </label>
            <label class="flex flex-col gap-2 text-sm text-white/80" data-field="email">
              Email
              <input
                type="email"
                class="rounded-[14px] border border-white/10 bg-white/5 px-3 py-3 text-white placeholder:text-white/40 focus:border-white/30 focus:outline-none"
                placeholder="you@example.com"
              />
              <span class="text-xs text-red-300 hidden">Please enter a valid email.</span>
            </label>
            <label class="flex flex-col gap-2 text-sm text-white/80" data-field="message">
              Type your message
              <textarea
                rows="4"
                class="rounded-[14px] border border-white/10 bg-white/5 px-3 py-3 text-white placeholder:text-white/40 focus:border-white/30 focus:outline-none"
                placeholder="How can we help?"
              ></textarea>
              <span class="text-xs text-red-300 hidden">Please enter your message.</span>
            </label>
            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-[14px] bg-white px-5 py-3 text-sm font-semibold text-[#0b0e1b] shadow-[0_15px_35px_rgba(255,255,255,0.25)] transition hover:-translate-y-0.5 hover:shadow-[0_25px_45px_rgba(255,255,255,0.35)] cursor-pointer"
            >
              Send message
            </button>
          </form>
        </div>
        <div
          id="contact-success"
          class="hidden rounded-[44px] border border-white/10 bg-white/5 p-6 flex flex-col gap-3 text-white relative"
        >
          <button
            type="button"
            data-modal-close
            class="absolute right-4 top-4 inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/5 text-white/70 transition hover:bg-white/10 hover:text-white cursor-pointer"
            aria-label="Close"
          >
            ✕
          </button>
          <h3 class="text-xl font-semibold text-white pr-10">Thanks for your message!</h3>
          <p class="text-sm text-white/70 pr-10">Our team will get in touch soon.</p>
          <div class="pt-2">
            <button
              type="button"
              data-modal-close
              class="inline-flex items-center justify-center rounded-[14px] bg-white px-5 py-3 text-sm font-semibold text-[#0b0e1b] shadow-[0_15px_35px_rgba(255,255,255,0.25)] transition hover:-translate-y-0.5 hover:shadow-[0_25px_45px_rgba(255,255,255,0.35)] cursor-pointer"
            >
              Done
            </button>
          </div>
        </div>
      </div>
    </div>
    <script>
      if (typeof window !== 'undefined') {
        document.querySelectorAll('.card-video').forEach(video => {
          const card = video.closest('.group');
          if (!card) return;
          const play = () => video.play().catch(() => {});
          const stop = () => {
            video.pause();
            video.currentTime = 0;
          };
          stop();
          card.addEventListener('mouseenter', play);
          card.addEventListener('mouseleave', stop);
        });
        const modal = document.getElementById('contact-modal');
        const openers = document.querySelectorAll('[data-modal-open]');
        const closers = document.querySelectorAll('[data-modal-close]');
        if ('scrollRestoration' in history) {
          history.scrollRestoration = 'manual';
        }
        window.scrollTo(0, 0);
        window.addEventListener('load', () => window.scrollTo(0, 0));
        const form = modal?.querySelector('#contact-form');
        const formBody = modal?.querySelector('#contact-body');
        const successBox = modal?.querySelector('#contact-success');
        const primaryClose = modal?.querySelector('.contact-content[data-modal-close]');
        const showForm = () => {
          successBox?.classList.add('hidden');
          successBox?.classList.remove('flex');
          formBody?.classList.remove('hidden');
          formBody?.classList.add('flex');
          form?.classList.remove('hidden');
          form?.classList.add('flex');
          modal?.querySelectorAll('.contact-content').forEach(el => {
            el.classList.remove('hidden');
            el.removeAttribute('style');
          });
        };
        const showSuccess = () => {
          modal?.querySelectorAll('.contact-content').forEach(el => {
            el.classList.add('hidden');
            el.setAttribute('style', 'display:none;');
          });
          form?.classList.add('hidden');
          formBody?.classList.add('hidden');
          successBox?.classList.remove('hidden');
          successBox?.classList.add('flex');
        };
        const openModal = e => {
          e.preventDefault();
          modal?.classList.remove('hidden');
          modal?.classList.add('flex');
          window.scrollTo(0, 0);
          // reset views on open
          showForm();
        };
        const closeModal = e => {
          e?.preventDefault();
          modal?.classList.add('hidden');
          modal?.classList.remove('flex');
          if (!form) return;
          form.reset();
          showForm();
          form.querySelectorAll('[data-field]').forEach(field => {
            field.classList.remove('text-red-200');
            field.querySelectorAll('span.text-red-300').forEach(err => err.classList.add('hidden'));
            field.querySelectorAll('input, textarea').forEach(el => {
              el.classList.remove('border-red-400');
            });
          });
        };
        openers.forEach(btn => btn.addEventListener('click', openModal));
        closers.forEach(btn => btn.addEventListener('click', closeModal));
        modal?.addEventListener('click', e => {
          if (e.target === modal) closeModal();
        });
        form?.addEventListener('submit', e => {
          e.preventDefault();
          let valid = true;
          const fields = {
            name: form.querySelector('[data-field="name"] input'),
            email: form.querySelector('[data-field="email"] input'),
            message: form.querySelector('[data-field="message"] textarea')
          };
          Object.entries(fields).forEach(([key, el]) => {
            const wrapper = el?.closest('[data-field]');
            const error = wrapper?.querySelector('span.text-red-300');
            const value = el?.value.trim() || '';
            let showError = false;
            if (!value) showError = true;
            if (key === 'email' && value) {
              const emailOk = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
              showError = !emailOk;
            }
            if (showError) {
              valid = false;
              el?.classList.add('border-red-400');
              error?.classList.remove('hidden');
            } else {
              el?.classList.remove('border-red-400');
              error?.classList.add('hidden');
            }
          });
          if (valid) {
            showSuccess();
          }
        });
        form?.querySelectorAll('[data-field]').forEach(wrapper => {
          const input = wrapper.querySelector('input, textarea');
          const error = wrapper.querySelector('span.text-red-300');
          input?.addEventListener('input', () => {
            const value = input.value.trim();
            let showError = !value;
            if (wrapper.dataset.field === 'email' && value) {
              showError = !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
            }
            if (showError) {
              input.classList.add('border-red-400');
              error?.classList.remove('hidden');
            } else {
              input.classList.remove('border-red-400');
              error?.classList.add('hidden');
            }
          });
        });
      }
    </script>
  </body>
</html>
