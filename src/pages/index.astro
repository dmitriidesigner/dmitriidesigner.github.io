                { label: 'Telegram', href: 'https://t.me/pktcash', icon: (
                  <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current"><path d="M22.5 2.6c-.5-.4-1.2-.5-2.1-.2L2.8 9.5c-1.4.6-1.3 1.5-.2 1.8l4.8 1.5 1.7 5.4c.2.6.9.8 1.3.3l2.4-2.4 4.9 3.8c.8.5 1.4.3 1.6-.6l3-16.9c.2-.9-.1-1.4-.8-1.8ZM8.9 13.6l9.3-6.1c.5-.3.9-.2.5.1l-7.6 6.8-.3 3.6-1.6-4.4Z"/></svg>
